<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_giaoduc"
    tools:context="com.example.admin.xmltest.ChucNang2Frag"
    android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="@dimen/man_hinh_chinh_imgwidth"
            android:layout_height="@dimen/man_hinh_chinh_imgheight"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/man_hinh_chinh_margin"
            android:layout_marginRight="@dimen/man_hinh_chinh_margin"
            android:background="@mipmap/logo"/>
        <Button
            android:id="@+id/btnGiaoDuc"
            android:onClick="chuyenGiaoDuc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/man_hinh_chinh_btnheight"
            android:background="@mipmap/btn_giaoduc"
            android:layout_marginLeft="@dimen/man_hinh_chinh_margin"
            android:layout_marginRight="@dimen/man_hinh_chinh_margin"
            android:layout_marginTop="@dimen/man_hinh_chinh_margin"
            />
        <Button
            android:id="@+id/btnComic"
            android:onClick="chuyenTruyen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/man_hinh_chinh_btnheight"
            android:background="@mipmap/btn_truyen"
            android:layout_marginLeft="@dimen/man_hinh_chinh_margin"
            android:layout_marginRight="@dimen/man_hinh_chinh_margin"
            android:layout_marginTop="@dimen/man_hinh_chinh_margin"
            />
        <Button
            android:id="@+id/btnVideo"
            android:onClick="chuyenVideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/man_hinh_chinh_btnheight"
            android:background="@mipmap/btn_video"
            android:layout_marginLeft="@dimen/man_hinh_chinh_margin"
            android:layout_marginRight="@dimen/man_hinh_chinh_margin"
            android:layout_marginTop="@dimen/man_hinh_chinh_margin"
            />
    </LinearLayout>

</ScrollView>